@model LoginViewModel

@{
    ViewBag.Title = "Přihlášení";
    Layout = "_FrontendLayout";
}

<h2>Přihlášení</h2>
@using (@Html.BeginForm("Login", "Users", FormMethod.Post))
{
    if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
     { 
         <div class="alert alert-danger">
             <button type="button" class="close" data-dismiss="alert">×</button>
             @Html.ValidationSummary(true, "Errors: ")
         </div>
     }
    <div class="form-group">
        @Html.LabelFor(m => m.Username)
        @Html.EditorFor(m => m.Username, new {htmlAttributes = new
        {
            @class = "form-control",
            id = "login-username"
        }})
        <div class="invalid-feedback">@Html.ValidationMessageFor(m => m.Username)</div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.EditorFor(m => m.Password, new {htmlAttributes = new {@class = "form-control"}})
        <div class="invalid-feedback">@Html.ValidationMessageFor(m => m.Password)</div>
    </div>
    <div class="form-check">
        @Html.EditorFor(m => m.RememberMe, new {htmlAttributes = new {@class = "form-check-input"}})
        @Html.LabelFor(m => m.RememberMe, new {htmlAttributes = new {@class = "form-check-label"}})
    </div>

    <a class="btn btn-success" href="@Url.Action("CreateAccount", "Users")">Vytvořit nový účet</a>
    <button type="submit" class="btn btn-primary">Přihlásit se</button>

}
