@using CzSharp.Utils.Extensions
@model CodeViewModel

@{
    ViewBag.Title = "Nový kód";
}

@section Styles
{
    <link rel="stylesheet" href="~/lib/tagsinput/tagsinput.css"/>
}

@using (@Html.BeginForm(FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Code.Title)
        @Html.EditorFor(c => c.Code.Title, new { htmlAttributes = new {@class = "form-control"}})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Code.Description)
        @Html.TinyMceFor(c => c.Code.Description, 100)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Code.CodeSample)
        @Html.AceEditorFor(c => c.Code.CodeSample)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.SelectedTags)
        @Html.EditorFor(a => a.SelectedTags, new {  htmlAttributes = new {@class="form-control", data_editor="tagsinput" }})
    </div>
    <button type="submit" class="btn btn-primary btn-sm float-right"><i class="fa fa-plus"></i> Přidat kód</button>
}

@section Scripts
{
    <script src="~/lib/tinymce/tinymce.min.js"></script>
    <script src="~/lib/ace/ace.js"></script>
    <script src="~/lib/typeahead/typeahead.js"></script>
    <script src="~/lib/tagsinput/tagsinput.js"></script>
}
