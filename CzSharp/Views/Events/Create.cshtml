@using CzSharp.Utils.Extensions
@model EventViewModel

@{
    ViewBag.Title = "Nová událost";
}

@section Styles
{
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/bootstrap-datepicker.min.css"/>
    <link rel="stylesheet" href="~/lib/tagsinput/tagsinput.css"/>    
}

<h2 class="mt-2 mb-2">@ViewBag.Title</h2>
@using (Html.BeginForm(FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Event.Title)
        @Html.EditorFor(m => m.Event.Title, new {htmlAttributes = new {@class = "form-control"}})
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Event.From)
                @Html.DatePickerFor(m => m.Event.From)
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Event.To)
                @Html.DatePickerFor(m => m.Event.To)
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Event.Address)
        @Html.EditorFor(m => m.Event.Address, new {htmlAttributes = new {@class = "form-control"}})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Event.Info)
        @Html.TinyMceFor(m => m.Event.Info)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedTags)
        @Html.EditorFor(a => a.SelectedTags, new {  htmlAttributes = new {@class="form-control", data_editor="tagsinput" }})
    </div>
    <div class="row justify-content-end">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-plus"></i> Přidat
        </button>
    </div>
}

@section Scripts
{
    <script src="~/lib/tinymce/tinymce.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/typeahead/typeahead.js"></script>
    <script src="~/lib/tagsinput/tagsinput.js"></script>
}
